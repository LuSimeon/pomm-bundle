{
    "repositories": [
        {
            "type": "path",
            "url": "../"
        }
    ],
    "require": {
        "symfony/symfony": "~3.0",
        "symfony/monolog-bundle": "~2.8",
        "twig/extensions": "~1.0",
        "sensio/framework-extra-bundle": "~3.0.2",
        "pomm-project/cli": "~2.0@dev",
        "pomm-project/foundation": "~2.0@dev",
        "pomm-project/pomm-bundle": "dev-sf3",
        "pomm-project/model-manager": "~2.0@dev",
        "pomm-project/pomm-symfony-bridge": "~2.0@dev"
    },
    "require-dev": {
        "behat/mink-extension": "~2.0",
        "behat/mink-goutte-driver": "*",
        "behat/mink-selenium2-driver": "*"
    },
    "autoload": {
        "psr-0": {
            "": "src/",
            "SymfonyStandard": "app/"
        },
        "classmap": [ "app/AppKernel.php" ]
    },
    "autoload-dev": {
        "files": ["tests/Features/bootstrap/FeatureContext.php"]
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-bin-dir": "bin",
        "symfony-var-dir": "var",
        "symfony-web-dir": "web"
    }
}
